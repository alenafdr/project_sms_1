<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="16dp"
    android:background="@color/white">


    <TextView
        android:id="@+id/textViewItemHistoryData"
        tools:text="15sep, 17:30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewItemHistoryAddress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
         />

    <TextView
        tools:text="20"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/textViewItemHistoryAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewItemHistoryAcc"/>

    <TextView
        tools:text="73.8457"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewItemHistoryLat"
        android:layout_below="@+id/textViewItemHistoryAddress"
        android:layout_toRightOf="@+id/textViewItemHistoryName"
        android:layout_toEndOf="@+id/textViewItemHistoryName"/>

    <TextView
        tools:text="55.35869"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/textViewItemHistoryLon"
        android:layout_below="@+id/textViewItemHistoryAddress"
        android:layout_toLeftOf="@+id/textViewItemHistoryLat"
        android:layout_toStartOf="@+id/textViewItemHistoryLat"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        tools:text="89095367845"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/textViewItemHistoryAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textViewItemHistoryNumber" />

    <TextView
        android:id="@+id/textViewItemHistoryAddress"
        tools:text="г.Омск проспект Мира 48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/textViewItemHistoryName"
        android:layout_toRightOf="@+id/ivImage"
        android:layout_toEndOf="@+id/ivImage"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/textViewItemHistoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Имя Фамилия"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textViewItemHistoryAddress"
        android:layout_alignStart="@+id/textViewItemHistoryAddress" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        tools:src="@drawable/ic_received"
        android:layout_above="@+id/textViewItemHistoryAcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </ImageView>

</RelativeLayout>